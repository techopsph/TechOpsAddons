<odoo>
  <data>
    <record model="ir.ui.view" id="trip_ticket_tms_view_form">
      <field name="name">trip_ticket.stock.picking.form</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <data>
            <xpath expr="//notebook//page[@name='note']" position="after">
                <page string="Trip Ticket" name="trip_ticket">
                    <group>
                        <group>
                            <field name="vehicle_id" attrs="{ 'readonly': [('trip_ticket_id', '!=', False)] }"/>
                            <field name="driver" attrs="{ 'readonly': [('trip_ticket_id', '!=', False)] }"/>
                            <field name="helper" attrs="{ 'readonly': [('trip_ticket_id', '!=', False)] }"/>
                            <field name="helper2" attrs="{ 'readonly': [('trip_ticket_id', '!=', False)] }"/>
                            <field name="helpers" widget="many2many_tags" attrs="{ 'readonly': [('trip_ticket_id', '!=', False)] }"/>
                        </group>
                        <group>
                            <field name="trip_ticket_id"/>
                            <field name="trip_ticket_scheduled_date"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </data>
      </field>
    </record>

  </data>
</odoo>
